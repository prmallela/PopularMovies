<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.prmallela.android.popularmovies.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Title_Height"
            android:gravity="center_vertical"
            android:id="@+id/dtitle"
            android:textSize="@dimen/Title_Text_Size"
            android:paddingLeft="@dimen/Title_Padding_Left"
            android:paddingRight="@dimen/Title_Padding_Right"
            android:textColor="@color/white"
            android:background="@color/titleBackground" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieItemPadding"
            android:id="@+id/dimageview"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/imageMarginTop"
            android:layout_below="@+id/dtitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieItemPadding"
            android:id="@+id/drelease"
            android:layout_marginLeft="@dimen/release_PMarginStart_Left"
            android:layout_marginStart="@dimen/release_PMarginStart_Left"
            android:layout_marginTop="@dimen/release_MarginTop"
            android:layout_toRightOf="@id/dimageview"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieItemPadding"
            android:id="@+id/drating"
            android:layout_marginLeft="@dimen/rating_PMarginLeftStart"
            android:layout_marginStart="@dimen/rating_PMarginLeftStart"
            android:layout_marginTop="@dimen/rating_PMarginTop"
            android:layout_toRightOf="@id/dimageview"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MovieItemPadding"
            android:id="@+id/doverview"
            android:layout_marginTop="@dimen/overview_MarginTop"
            android:layout_below="@id/dimageview"
            android:textAppearance="?android:attr/textAppearanceMedium"/>




    </RelativeLayout>
</ScrollView>
